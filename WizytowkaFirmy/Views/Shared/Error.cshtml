@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container">
    <h1 class="text-danger text-center">Ups! Coś poszło nie tak...</h1>
    <h2 class="text-danger text-center">Wystąpił problem podczas przetwarzania Twojego żądania.</h2>

    @if (Model.ShowRequestId)
